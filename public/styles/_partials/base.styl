/* partials base
   ----------------------------- */
body
  font-family 'freight-sans-pro'
  text-align center
  &.modal-open
    overflow hidden

section
  padding 120px 75px
  box-sizing border-box
  position relative
  z-index 1

  &.dark
    color white
  .bg-slanted
    background black
    absolute top bottom left right
    z-index -1
    transform skewY(2deg)
    backface-visibility hidden
    overflow hidden
    maxHeight = 500px
    &.bg-image:before
      content ''
      absolute top -10px bottom -10px left right
      background url('/img/bg1.jpg') no-repeat
      background-size 100%
      max-height maxHeight
      filter blur(3px)
      opacity 0.5
    .dark-mask
      background linear-gradient(rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%)
      absolute top bottom left right
      max-height maxHeight
      z-index 5
    .gradient
      absolute top bottom left right
      max-height maxHeight - 1px
      z-index 4
      opacity 0.5
      &.alien-grad
        background linear-gradient(90deg, blue, purple)
      &.ocean-grad
        background linear-gradient(90deg, green, blue)
      &.fire-grad
        background linear-gradient(90deg, orange, pink)

  p:first-of-type
    margin-top 60px

.image-grid
  margin 60px auto
  max-width 1100px
  img
    display inline-block
    margin 5px
    width 200px

/* typekit loading */
.wf-loading
  visibility hidden
