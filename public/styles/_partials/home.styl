/* partial home
   ----------------------------- */
.home-page
  counter-reset home-headings

  .case-study
    height 100vh
    min-height 700px
    position relative
    .title
      position absolute
      top 50%
      transform translateY(-50%)
      z-index 6
      &.left
        left 10%
      &.right
        right 10%
    .image
      position absolute
      top 50%
      transform translateY(-50%)
      z-index 5
      width 470px
      height 470px
      &.left
        left 15%
      &.right
        right 15%
      img
        min-width 100%
        max-height 100%
      [class^="outline"]
        position absolute
        width 565px
        height 565px
      .outline1
        top -80px
        left -80px
      .outline2
        top -40px
        left -50px

    &.gym-jones .image [class^="outline"]
      gradient-border(fire-grad-1, fire-grad-2, 1px)
    &.silver-vue .image [class^="outline"]
      gradient-border(ocean-grad-1, ocean-grad-2, 1px)
    &.school-improvement .image [class^="outline"]
      gradient-border(alien-grad-1, alien-grad-2, 1px)
    &.pro-vigil .image [class^="outline"]
      gradient-border(alien-grad-1, alien-grad-2, 1px)

  h2
    counter-increment home-headings
    border-top 6px solid black
    padding-top 10px
    display inline-block
    width 34%
    text-align left
    margin-top 6px // to line up content text with border
    margin-right 100px
    &:before
      content "0" counter(home-headings)
      font-size 26px
      font-weight 300
      vertical-align top
      margin-right 15px

  section
    &:nth-child(2) h2:before
      color purple
    &:nth-child(4) h2:before
      color orange
    &:nth-child(6) h2:before
      color blue

  .descrip
    display inline-block
    width calc(65% - 100px)
    text-align left
    vertical-align top
    p
      margin-bottom 20px

    .blocks
      list-style-type none
      text-align justify
      &:after
        content ''
        width 100%
        display inline-block
      li
        display inline-block
        width 135px
        height 135px
        vertical-align top
        border 1px solid black
        position relative
        text-align center
        font-size 15px
        font-weight 500
        letter-spacing 1.2px
        line-height 20px
        margin-bottom 25px
        div:first-child
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          width 100%
      &.services li
        color purple
        border none
        position relative
        gradient-border(alien-grad-1, alien-grad-2, 1px)
        &:first-child
          &:before, &:after
            background none
          [class^="outline"]
            gradient-border(alien-grad-1, alien-grad-2, 1px)
            position absolute
            width 100%
            height 100%
          .outline1
            bottom -5px
            left -5px
          .outline2
            top -5px
            right -5px
      &.clients li
        border-color off-white
        &:hover
          border-color off-white - 10%
        img
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
        a
          width 100%
          height 100%
          display block

    .avatars
      list-style-type none
      text-align left
      margin-bottom 20px
      li
        display inline-block
        background-size 100%
        width 100px
        height 100px
        margin 4px
        vertical-align top
        position relative
        &:first-child, &:nth-child(5n+1)
          margin-left 0
        &:hover
          &:before
            display block
          div
            display block
        &:before
          display none
          content ''
          background rgba(0,0,0,.7)
          position absolute
          top 0
          bottom 0
          left 0
          right 0
        div
          display none
          color white
          width 100%
          font-size 14px
          font-weight 500
          padding 5px 10px
          box-sizing border-box
          text-align center
          position absolute
          top 50%
          transform translateY(-50%)
          hr
            border none
            border-top 2px solid white
            width 20px
            margin 8px auto
            opacity 0.3
      img
        width 100%
        height 100%
