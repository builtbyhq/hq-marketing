/* elements buttons
   ----------------------------- */
.btn
  display inline-block
  background none
  font-size 16px
  font-weight 500
  letter-spacing 1.2px
  padding 15px 20px
  position relative
  min-width 165px
  text-align center
  border 1px solid black
  color black

.btn-alien
  gradient-border(alien-grad-1, alien-grad-2, 1px)
  color alien-grad-2
.btn-ocean
  gradient-border(ocean-grad-1, ocean-grad-2, 1px)
  color ocean-grad-2
.btn-fire
  gradient-border(fire-grad-1, fire-grad-2, 1px)
  color fire-grad-2
