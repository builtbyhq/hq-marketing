       url('/fonts/freight-sans/freightsans-bold-webfont.woff2') format('woff2'),
       url('/fonts/freight-sans/freightsans-bold-webfont.woff') format('woff'),
       url('/fonts/freight-sans/freightsans-bold-webfont.ttf') format('truetype'),
       url('/fonts/freight-sans/freightsans-bold-webfont.svg#freight-sans') format('svg')
