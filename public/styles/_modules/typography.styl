/* modules typography
   ----------------------------- */
h1, h2, h3, h4, h5, h6
  margin 0

h1
  font-family 'freight-text'
  font-size 50px
  &.huge
    font-family 'freight-sans'
    font-size 95px
    font-weight 500

h2
  font-size 48px
  font-weight 600
h4
  font-weight 500
  color purple
  letter-spacing 1px
h5
  font-size 22px
  font-weight 400
p
  font-size 20px
  font-weight 400
  line-height 34px

/* font faces
   ----------------------------- */
@font-face
  font-family 'freight-sans'
  src url('/fonts/freight-sans/freightsans-book-webfont.eot')
  src url('/fonts/freight-sans/freightsans-book-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/freight-sans/freightsans-book-webfont.woff2') format('woff2'),
       url('/fonts/freight-sans/freightsans-book-webfont.woff') format('woff'),
       url('/fonts/freight-sans/freightsans-book-webfont.ttf') format('truetype'),
       url('/fonts/freight-sans/freightsans-book-webfont.svg#freight-sans') format('svg')
  font-weight 400
  font-style normal

@font-face
  font-family 'freight-sans'
  src url('/fonts/freight-sans/freightsans-medium-webfont.eot')
  src url('/fonts/freight-sans/freightsans-medium-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/freight-sans/freightsans-medium-webfont.woff2') format('woff2'),
       url('/fonts/freight-sans/freightsans-medium-webfont.woff') format('woff'),
       url('/fonts/freight-sans/freightsans-medium-webfont.ttf') format('truetype'),
       url('/fonts/freight-sans/freightsans-medium-webfont.svg#freight-sans') format('svg');
  font-weight 500
  font-style normal

@font-face
  font-family 'freight-sans'
  src url('/fonts/freight-sans/freightsans-bold-webfont.eot')
