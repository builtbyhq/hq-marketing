/* modules typography
   ----------------------------- */
h1, h2, h3, h4, h5, h6
  margin 0

h1
  font-family 'freight-text'
  font-size 50px
  margin-bottom 15px
  &.huge
    font-family 'freight-sans'
    font-size 95px
    font-weight 500
    margin-bottom 0

h2
  font-size 48px
  font-weight 600
h4
  font-weight 500
  letter-spacing 1px
h5
  font-size 22px
  font-weight 400
p
  font-size 20px
  font-weight 400
  line-height 34px
  margin auto
  margin-bottom 30px
  text-align left
  max-width 700px

.numbered-header
  display block
  margin 30px auto
  font-family 'freight-text'
  font-size 18px
  font-weight 300
  position relative
  transform rotate(45deg)
  width 30px
  height 30px
  line-height 30px
  span
    display block
    transform rotate(-45deg)
  &.light
    border 2px solid rgba(255, 255, 255, .2)
    color white
  &.dark
    border 2px solid rgba(0, 0, 0, .1)
    color black

/* font faces
   ----------------------------- */
@font-face
  font-family 'freight-sans'
  src url('/fonts/freight-sans/freightsans-book-webfont.eot')
  src url('/fonts/freight-sans/freightsans-book-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/freight-sans/freightsans-book-webfont.woff2') format('woff2'),
       url('/fonts/freight-sans/freightsans-book-webfont.woff') format('woff'),
       url('/fonts/freight-sans/freightsans-book-webfont.ttf') format('truetype'),
       url('/fonts/freight-sans/freightsans-book-webfont.svg#freight-sans') format('svg')
  font-weight 400
  font-style normal

