h1, h2, h3, h4, h5, h6
  margin 0

h1
  font-family 'europa'
  font-size 3em
  color black

h3
  font-size 2em
  font-weight 400
  font-family 'europa'
  max-width 350px
  margin-bottom 40px

h4
  font-size 1.3em
  font-weight 300
  letter-spacing 6px
  &.rotated
    position absolute
    left 0
    transform rotate(-90deg)
    transform-origin hPadBody - 10px
    z-index 10
  &.rotated-inverse
    position absolute
    right 100px
    margin-top 100px
    transform rotate(90deg)
    transform-origin right
    z-index 10

h5
  color white
  font-size 1em
  font-family 'freight-sans-pro'
  font-weight 500
  letter-spacing 1px

p
  font-size 20px
  font-weight 400
  line-height 34px
  margin 30px auto
  text-align left
  max-width 700px
  width 100%
  b
    margin-right 5px

h4 + p
  margin-top 50px

.center
  text-align center

.numbered-header
  display block
  margin 30px auto
  font-family 'europa'
  font-size 16px
  position relative
  transform rotate(45deg)
  width 30px
  height 30px
  line-height 30px
  box-sizing content-box
  text-align center
  span
    display block
    transform rotate(-45deg)
  &.light
    border 2px solid rgba(255, 255, 255, .2)
    color white
  &.dark
    border 2px solid rgba(0, 0, 0, .1)
    color black

.markdown-body
  max-width 700px
  margin auto
  text-align left
  position relative
  padding-top 40px
  h2, h3, h4, h5, h6
    text-align left
    color black !important
    margin 20px 0
  img
    max-width 100%
