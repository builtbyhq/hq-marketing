extend ../_partials/layout

append vars
  - var pageName = "post-page"
  - var logoClass = "white alt-blk-wht"
  - var menuClass = "white alt-blk-wht"

block content
  include ../_partials/header

  - var headerColor = headerClass === 'alt-to-blk' ? 'black' : 'white'
  section(class="area-header center " + (headerClass || ''), style="padding:" + (headerPadding||''))
    h1(class="heading " + headerColor)= title
    h6(class="heading-tiny " + headerColor)= author

  section(class="area-light area-sml alt-to-blk")
    div(class="bg-slanted")
    
    div.markdown-body
      block postContent
