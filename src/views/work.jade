extend _partials/layout

append vars
  - var pageName = "work-page"
  - var menuClass = "alt-blk-wht"
  - var logoClass = "alt-blk-wht"
  - var pageTitle = "The Work | Web, Mobile, UI/UX and Branding Case Studies"
  - var pageDescription = "The work. Here's what we're great at. Case Studies For: Web. Mobile. UI/UX. Branding."

