          img(src="/img/work/web/gym-jones.jpg")
        div(class="platform grow"): div(class="box")
          img(src="/img/work/web/pro-vigil.jpg")
        div(class="platform grow"): div(class="box")
          img(src="/img/work/web/far-better.jpg")
    
