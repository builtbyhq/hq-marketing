    script(type='text/javascript', src='/case-studies/jquery.mobile.custom.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/skrollr/0.6.30/skrollr.min.js')
    script(type='text/javascript', src='/case-studies/jquery.waypoints.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/3.0.8/autosize.min.js")
    script(type='text/javascript', src='/app.js')
    script(type='text/javascript', src='/case-studies/global.js')
