/**
 * base
 */

body
  font-family 'freight-sans-pro'
  font-size 1.1em
  line-height normal
  color clr-black
  background clr-white

.wrapper
  position relative

header.main
  display flex
  justify-content space-between
  padding (vPad/2) (hPad/2)
  position relative
  z-index 10
  +below(res-mobile)
    padding vPadMob hPadMob

.image-grid-wrap
  margin 50px auto
  img
    margin 5px

.image-grid
  @extend .image-grid-wrap
  max-width 100vw
  overflow auto
  -webkit-overflow-scrolling touch
  white-space nowrap
  img
    display inline-block
    width 200px
    height 200px
  +below(res-mobile)
    img
      width 150px
      height 150px

.image-center
  max-width 100vw
  overflow auto
  white-space nowrap
  img
    margin 0 auto
  +below(res-mobile)
    img
      width 150px
      height 150px
