/**
 * platforms
 */

.platform
  width 450px
  position absolute
  // top 25%
  box-shadow -46px 46px 100px rgba(20, 20, 25, .6)
  // z-index 8
  transition box-shadow .3s
  cursor pointer
  &:not(.grow)
    height 500px
  &:hover
    box-shadow -25px 25px 60px rgba(20, 20, 25, .8)
    .overlay
      opacity 1
  &:active
    .overlay
      h4, h6
        opacity .6
  &.on-left
    left hPad
    .outline
      transform translate(-45px, -40px)
  &.on-right
    right hPad
    .outline
      transform translate(45px, -40px)
  .overlay
    display flex
    flex-direction column
    justify-content center
    text-align center
    background rgba(34, 35, 37, .87)
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    opacity 0
    transition all .3s
  .outline
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    height 100%
    gradient-border(clr-red, clr-magenta, 1px)
    z-index -1
  img
    max-width 450px
