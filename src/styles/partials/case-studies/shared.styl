.case-study-hero
  height auto
  @media (min-width: 992px)
    height 530px
  @media (min-width: 1275px)
    height 700px

  .heading-diamond
    color clr-white
    text-align center

  .heading
    text-align center
    font-size 36px
    margin-bottom 15px

    @media (min-width: 501px)
      font-size: 48px

    @media (min-width: 992px)
      font-size 80px

  .text-wide
    color clr-white
    text-align center

.case-study-buffer-area
  padding 0


.case-study-slider
  width 90%
  height auto
  max-width 1021px
  margin 0 auto

  .slick-slide
    height auto

  .slick-prev:before,
  .slick-next:before
    color clr-black

  img
    max-width 100%
