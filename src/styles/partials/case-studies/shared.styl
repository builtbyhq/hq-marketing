.case-study-hero
  height auto
  @media (min-width: 992px)
    height 530px
  @media (min-width: 1275px)
    height 700px

  .heading-diamond
    color clr-white
    text-align center

  .heading
    text-align center
    font-size 36px
    margin-bottom 15px

    @media (min-width: 501px)
      font-size: 48px

    @media (min-width: 992px)
      font-size 80px

  .text-wide
    color clr-white
    text-align center

.case-study-buffer-area
  padding 0


.case-study-slider
  width 90%
  height auto
  max-width 1021px
  margin 0 auto

  .slick-slide
    height auto

  .slick-prev,
  .slick-next
    width 30px
    height 30px
    background-repeat no-repeat
    background-size 100%
    background-position center center

    @media(min-width 500px)
      width 45px
      height 45px

  .slick-prev
    background-image url('/img/slider-arrow-left.png')
    left -45px
    @media(min-width 500px)
      left -75px

    &:before
      display none

  .slick-next
    background-image url('/img/slider-arrow-right.png')
    right -45px
    @media(min-width 500px)
      right -75px

    &:before
      display none

  img
    max-width 100%
