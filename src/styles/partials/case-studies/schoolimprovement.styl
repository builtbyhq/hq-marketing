#schoolimprovement-page
  pseudo-bg()
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -1
  &:before
    pseudo-bg()
    background clr-black
  &:after
    pseudo-bg()
    background url('/img/banners/home7.jpg') no-repeat
    background-position top center
    background-size 110%
    background-color white
    +below(res-tablet)
      background-size 350%

  .case-study-problem-solution
    height auto
    padding-bottom 250px

    @media (min-width: 1275px)
      padding-bottom 400px

  .person-photo
    display block
    margin 0 auto
    max-width 100%

  .case-study-second-point
    position relative
    height auto

    .case-study-point-content-wrapper
      position relative
      margin 0 auto
      padding-top 200px

      @media (min-width 800px)
        padding-top 350px

      @media (min-width 1275px)
        padding-top 250px

  .case-study-third-point
    position relative
    height auto

    .case-study-point-content-wrapper
      padding-top 450px

  .bg-schoolimprovement1
    &:before
      background-image url('/img/schoolimprovement/schoolimprovement-designing.jpg')

.schoolimprovement-desktop-tablet-phone-wrapper
  position absolute
  top -10%
  left 0
  width 100%
  height auto

  @media (min-width 1275px)
    top -24%

.schoolimprovement-desktop-tablet-phone
  position relative
  width 100%
  height auto
  text-align center

  img
    max-width 100%
    margin 0 auto

  .schoolimprovement-desktop-tablet-phone-large
    display none

    @media (min-width 600px)
      display block

  .schoolimprovement-desktop-tablet-phone-small
    display block

    @media (min-width 600px)
      display none
