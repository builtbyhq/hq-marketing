#silvervue-page
  pseudo-bg()
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -1
  &:before
    pseudo-bg()
    background clr-black
  &:after
    pseudo-bg()
    background url('/img/silvervue/silvervue-hero-bg.jpg') no-repeat
    background-position top center
    background-size 110%
    background-color white
    +below(res-tablet)
      background-size 405%

  .case-study-problem-solution
    height auto
    padding-bottom 250px

    @media (min-width: 1275px)
      padding-bottom 400px

  .silvervue-tablet-wrapper
    position absolute
    top -14%
    left 0
    width 100%
    height auto

    @media (min-width 1275px)
      top -20%

  .silvervue-tablet
    img
      margin 0 auto
      display block
      max-width 95%


  /**
   * Second Point
   */
  .case-study-second-point
    .case-study-point-content-wrapper
      padding 150px 0 800px 0

  /**
   * Third Point
   */
  .case-study-third-point
    position relative
    height auto

    .case-study-point-content-wrapper
      padding-top 450px

  .bg-silvervue1
    &:before
      background-image url('/img/silvervue/silvervue-designing.jpg')

  /**
   * Mobile Ready
   */

  .mobile-ready
    position relative
    padding-top 200px
    padding-bottom 400px
    .content-wrapper
      width 90%
      max-width 50%
      .heading-diamond
        margin-left 0
        margin-right 0
      .heading
        text-align left
        margin-bottom 20px
      .text-wide
        text-align left
        margin-bottom 0
    .image-wrapper
      position absolute
      top -140px
      right 0
      width 50%
      text-align right
      img
        max-width 100%


  /**
   * Before/after section
   */

  .silvervue-before-after
    position relative
    padding-bottom 300px

  .style-guide-wrapper
    margin 0 auto
    margin-top -1000px



  /**
   * Before-After Slider
   */
  .before-after-wrapper
    margin-top 150px

  .before-after-slider
    position relative
    max-width 442px
    width 100%
    margin 0 auto

    .before-img-label
      position: absolute;
      top: -20px
      left: 0
      font-size: 12px;
      font-weight: 400;
      color: black;
      font-family 'europa'
      transform none
      @media (min-width: 1275px)
        top: 50%;
        left: -120px;
        font-size: 24px;
        font-weight: 600;
        transform translateY(-50%)

    .after-img-label
      position: absolute;
      top: -20px
      right: 0
      font-size: 12px;
      font-weight: 400;
      font-family 'europa'
      color: black;
      transform none
      @media (min-width: 1275px)
        top: 50%;
        right: -105px;
        font-size: 24px;
        font-weight: 600;
        transform translateY(-50%)

  .ba-slider
    overflow visible

  .ba-slider
    .handle
      top -10px
      bottom -10px
      width 3px
      background clr-black
      &:after
        content ''
        top auto
        bottom -30px
        margin-left -15px
        border 0
        border-radius 0
        box-shadow none
        background-color transparent
        background-image url('./img/before-after-slider-arrow.png');
        background-repeat no-repeat
        background-size 100%
        width 34px
        height 34px
