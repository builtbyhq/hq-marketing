#gymjones-page
  pseudo-bg()
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -1
  &:before
    pseudo-bg()
    background clr-black
  &:after
    pseudo-bg()
    background url('/img/gymjones/gymjones1.jpg') no-repeat
    background-position top center
    background-size 110%
    background-color white
    +below(res-tablet)
      background-size 400%

  .case-study-problem-solution
    height auto
    padding-bottom 250px

    @media (min-width: 1275px)
      padding-bottom 400px

  .person-photo
    display block
    margin 0 auto
    max-width 100%

  .case-study-second-point
    position relative
    height auto

    .case-study-point-content-wrapper
      position relative
      margin 0 auto
      margin-top 200px

      @media (min-width 800px)
        margin-top 350px

      @media (min-width 1275px)
        margin-top 200px

  .case-study-third-point
    position relative
    height auto

    .case-study-point-content-wrapper
      margin-top 450px

  .bg-gymjones1
    &:before
      background-image url('/img/gymjones/gymjones-designing.jpg')

.gymjones-laptop-phone-wrapper
  position absolute
  top -14%
  left 0
  width 100%
  height auto

  @media (min-width 1275px)
    top -28%

.gymjones-laptop-phone
  position relative
  width 100%
  height auto
  text-align center

  img
    max-width 100%
    margin 0 auto

  .gymjones-laptop-phone-large
    display none

    @media (min-width 600px)
      display block

  .gymjones-laptop-phone-small
    display block

    @media (min-width 600px)
      display none
