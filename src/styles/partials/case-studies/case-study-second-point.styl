/**
 * Common style for case-study-second-point section
 */

.case-study-second-point
  position relative
  height auto

  .heading-diamond
    color clr-white
    text-align center

  .heading
    color clr-prored
    text-align center
    font-size 36px
    margin-bottom 15px
    @media (min-width: 501px)
      font-size: 48px
    @media (min-width: 992px)
      font-size 80px

  .text-wide
    color clr-white
    text-align center


/**
 * Unique styles for case-study-second-point section
 * on each case study page 
 */

#gymjones-page
  .case-study-second-point
    .case-study-point-content-wrapper
      position relative
      margin 0 auto
      padding-top 200px
      @media (min-width 800px)
        padding-top 350px
      @media (min-width 1275px)
        padding-top 200px


#provigil-page
  .case-study-second-point
    background-color clr-white
    height 1200px

    .case-study-point-content-wrapper
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 100%
      max-width 90%


#silvervue-page
  .case-study-second-point
    .case-study-point-content-wrapper
      padding 150px 0 800px 0


#schoolimprovement-page
  .case-study-second-point
    .case-study-point-content-wrapper
      position relative
      margin 0 auto
      padding-top 200px
      @media (min-width 800px)
        padding-top 350px
      @media (min-width 1275px)
        padding-top 250px
