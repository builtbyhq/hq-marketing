.case-study-next-up
  background-color clr-black
  margin-top -50px
  height 1000px
  text-align center

  .plat-gymjones
    background url('/img/cards/gymjones.png') clr-offBlack no-repeat
    background-position 0px center
    background-size 150%
    border 1px solid clr-purple

  .plat-sinet
    background url('/img/cards/sinet.png') clr-offBlack no-repeat
    background-position 0px center
    background-size 100%
    border 1px solid clr-purple

  .plat-silvervue
    background url('/img/cards/silvervue.png') clr-offBlack no-repeat
    background-position 0px center
    background-size 150%
    border 1px solid clr-purple

  .plat-provigil
    background url('/img/cards/provigil.png') clr-offBlack no-repeat
    background-position 0px center
    background-size 120%
    border 1px solid clr-purple

  .platform
    .outline
      transform translate(-30px,-50px)
    &.on-left
      left 0
      transform none

      @media (min-width: 501px)
        left 50%
        transform translateX(-50%)

      @media (min-width: 992px)
        left 150px
        transform none

  .next-up-link-wrapper
    position absolute
    top -45px
    left 0

    @media (min-width: 992px)
      top 30%
      left -60%

    a
      font-size 28px
      font-weight 600

      @media (min-width 992px)
        font-size 95px

.case-study-next-up-content
  display inline-block
  position relative
  margin-top 10%
  margin-left 0
  width 100%

  @media (min-width: 992px)
    margin-left -50%
    width auto




.case-study-animated-next-wrapper
  height auto
  margin-top -150px
  margin-bottom -150px
  background-color black
  position relative

  @media (min-width 1200px)
    height 1200px

.animated-next-container
  display none
  position absolute
  top 55%
  left 55%
  transform translate(-50%, -50%)
  width 615px
  height 615px

  @media (min-width: 1200px)
    display block

.animated-next-content
  position relative
  width 100%
  height 100%
  &:hover
    .animated-next-border
      top 0 !important
      right 0 !important
    .nextup-wrapper
      left -200px

.animated-next-img
  height 471px
  width 471px
  background-repeat no-repeat
  background-size cover
  background-position center center
  position absolute
  top 50px
  right 50px

#gymjones-page
  .animated-next-img
    background-image url('/img/cards/sinet.png')
#schoolimprovement-page
  .animated-next-img
    background-image url('/img/cards/silvervue.png')
#silvervue-page
  .animated-next-img
    background-image url('/img/cards/provigil.png')
#provigil-page
  .animated-next-img
    background-image url('/img/cards/gymjones.png')

.animated-next-border
  height 565px
  width 565px
  border 1px solid
  position absolute
  transition all 300ms ease

.animated-next-border-one
  top 0
  right 50px
.animated-next-border-two
  top 50px
  right 0

.animated-next-link
  display block
  position absolute
  height 100%
  width 100%
  top 0
  right 0

.nextup-wrapper
  position absolute
  top 200px
  left -250px
  text-align center
  transition all 300ms ease

  a
    font-size 95px
    font-weight 600
    display block

    span
      display block
      text-align center
      color white
      font-size 20px
      font-weight 400

.non-animated-next-container
  display block
  text-align center
  margin 150px auto 50px auto

  @media (min-width 1200px)
    display none

.non-animated-next-content
  position relative
  display inline-block
  max-width 615px

.non-animated-next-link
  display inline-block
  border 1px solid

  img
    display block
    max-width 100%
    height auto

.non-animated-next-overlay
  display flex
  flex-direction column
  justify-content center
  text-align center
  position absolute
  top 1px
  left 1px
  width calc(100% - 2px)
  height calc(100% - 3px)
  background-color rgba(34,35,37,0.87)
  transition all 300ms ease

  .small
    margin-bottom 10px
    font-size 0.8em

  .heading-sub
    margin-bottom 15px
