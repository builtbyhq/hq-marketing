/**
 * common styles for case study pages' hero section
 */

.case-study-hero
  height auto
  @media (min-width: 992px)
    height 530px
  @media (min-width: 1275px)
    height 700px

  .heading-diamond
    color clr-white
    text-align center

  .heading
    text-align center
    font-size 36px
    margin-bottom 15px
    @media (min-width: 501px)
      font-size 48px
    @media (min-width: 992px)
      font-size 80px

  .text-wide
    color clr-white
    text-align center

/**
 * Top backgound image area
 */

.case-study-page-background
  pseudo-bg()
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -1
  &:before
    pseudo-bg()
    background clr-black
  &:after
    pseudo-bg()
    background-color white
    background-repeat no-repeat
    background-position top center

#gymjones-page
  @extend .case-study-page-background
  &:after
    pseudo-bg()
    background-image url('/img/gymjones/gymjones1.jpg')
    background-size 110%
    +below(res-tablet)
      background-size 400%

#provigil-page
  @extend .case-study-page-background
  &:after
    pseudo-bg()
    background-image url('/img/provigil/provigil-hero-bg-blue.jpg')
    background-size 420%
    @media (min-width: 480px)
      background-size 250%
    @media (min-width: 992px)
      background-size 110%

#silvervue-page
  @extend .case-study-page-background
  &:after
    pseudo-bg()
    background-image url('/img/silvervue/silvervue-hero-bg.jpg')
    background-size 110%
    +below(res-tablet)
      background-size 405%

#schoolimprovement-page
  @extend .case-study-page-background
  &:after
    pseudo-bg()
    background-image url('/img/banners/home7.jpg')
    background-size 110%
    +below(res-tablet)
      background-size 350%
