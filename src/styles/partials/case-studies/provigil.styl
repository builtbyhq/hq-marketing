#provigil-page
  pseudo-bg()
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -1
  &:before
    pseudo-bg()
    background clr-black
  &:after
    pseudo-bg()
    background url('/img/provigil/provigil-hero-bg-blue.jpg') no-repeat
    background-position top center
    background-size 110%
    background-color white

.provigil-desktop-table-phone-wrapper
  position absolute
  top -22%
  left 0
  width 100%
  height auto

.provigil-desktop-table-phone
  position relative
  width 100%
  height auto
  text-align center

  img
    display inline-block

    &.desktop
      margin-right 18px

    &.tablet
      margin-bottom 75px
      margin-right 10px

    &.phone
      margin-bottom 65px
      margin-right 0


.provigil-photo-column-wrapper
  position absolute
  top -22%
  left 0
  width 100%
  height auto

  .provigil-photo-column
    column-count 2
    column-gap 40px
    text-align center

  .provigil-photo
    display inline-block
    margin 20px
    width 100%

    &:nth-child(1)
      text-align right

    &:nth-child(2)
      text-align right
      img
        box-shadow -46px 46px 100px rgba(20, 20, 25, .6)

    &:nth-child(3)
      text-align left
      img
        box-shadow -46px 46px 100px rgba(20, 20, 25, .6)
        margin-top 112px

    &:nth-child(4)
      text-align left


