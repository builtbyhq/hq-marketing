/**
 * partials work
 */

#work-page
  .web
    padding-bottom 500px
    +below(res-mobile)
      padding-bottom 1400px
  .platforms-web
    top 750px
    +below(res-mobile)
      top 500px

  .mobile
    margin-top 2000px
    +below(res-mobile)
      margin-top 500px
  .platforms-mobile
    top 3500px
    +below(res-mobile)
      top 2550px

  .ui
    margin-top 2500px
    padding-bottom 700px
    +below(res-mobile)
      margin-top 1950px
  .platforms-ui
    top 6400px
    +below(res-mobile)
      top 4800px

  .branding
    margin-top 2000px
    +below(res-mobile)
      margin-top 1330px
  .platforms-branding
    top 9400px
    +below(res-mobile)
      top 7000px

  .platforms
    position absolute
    z-index 9
    width 100%
    max-width 1000px
    left 50%
    transform translateX(-50%)
    vertical-align top
    +below(res-mobile)
      left 0
      right 0
      transform initial
    .left
      position absolute
      top 0
      left 0
      width 50%
      +below(res-mobile)
        position relative
        width 100%
    .right
      position absolute
      top 100px
      right 0
      width 50%
      +below(res-mobile)
        display none

  .platform
    position relative
    margin-bottom 100px
    display inline-block
    vertical-align top
    font-size 0
    cursor default
    +below(res-mobile)
      margin-bottom 50px
