body
  font-family 'freight-sans-pro'
  text-align center
  font-size 1em
  position relative
  background white
  &.modal-open
    overflow hidden

.heading
  padding 50px 0 180px
  &.no-bg
    background white

.numbered-heading
  font-size 2em
  color darkText
  display inline-block
  margin-left -50px
  margin-bottom 30px
  &:before
    content ''
    position absolute
    margin 23px 0 0 50px
    width 100px
    height 4px
    background darkText

.raised-image
  position absolute
  top 200px
  box-shadow -45px 45px 65px rgba(0,0,0,.5)
  text-align right
  z-index 10
  .image
    width 450px
    height 530px
    position relative
    z-index 10
    img
      max-width 80%
      max-height 80%
      vertical-align middle
      position absolute
      top 50%
      right 0
      transform translateY(-50%)
  &.right
    right 130px
    .outline
      transform translate(45px, -40px)
  &.left
    left 130px
    .outline
      transform translate(-45px, -40px)
  .outline
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    height 100%
    gradient-border(red, magenta, 1px)
    z-index 9

.left-header
  display inline-block
  padding-left 50px
  vertical-align top
.right-header
  display inline-block
  margin-left 60%
  vertical-align top
.right-content
  display inline-block
  vertical-align top

section
  padding 150px hPadBody
  position relative
  text-align center
  &.light
    color black
  &.dark
    color white
  .gradient
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 4
    max-height 700px
    opacity 0.3
  .dark-mask
    background linear-gradient(rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%)
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    max-height 700px
    z-index 5
  .bg-slanted
    position absolute
    top -25px
    bottom 0
    left 0
    right 0
    z-index -1
    transform skewY(2deg)
    backface-visibility hidden
    overflow hidden
    .bg-image
      position absolute
      top -10px
      bottom -10px
      left 0
      right 0
      background-repeat no-repeat
      background-size 100%
      background-position top center
      &.blur
        filter blur(3px)
  .bg-image-full
    position absolute
    top -50px
    bottom -10px
    left 0
    right 0
    background-repeat no-repeat
    background-size cover
    background-position center
    opacity 0.2
    z-index -1

.image-grid
  margin 60px auto
  max-width 1100px
  img
    display inline-block
    margin 5px
    width 200px

  &.nowrap
    white-space nowrap
    overflow hidden
    +below(rupture.desktop-cutoff)
      img:nth-child(even)
        display none
    +below(500px)
      img
        width calc(100vw / 3)
        display none
      img:nth-child(-n+2)
        display inline-block
