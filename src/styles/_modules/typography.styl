/**
 * modules typography
 */

h1
  font-family 'europa'
  font-size 4em
  margin 0

h2
  font-family 'europa'
  font-size 2em
  max-width 350px

h3
  font-family 'bebas-neue'
  font-size 1.7em
  font-weight 400

h6
  font-family 'freight-sans-pro'
  font-size .95em
  font-weight 500
  margin 0

p
  font-size 1.1em
  font-weight 300
  line-height 34px
  margin 30px auto
  text-align left
  max-width 700px
  width 100%

.numbered
  color dusk
  margin 0 0 40px -50px
  &:before
    content ''
    background dusk
    width 100px
    height 4px
    position absolute
    margin 13px 0 0 50px

.vertical
  font-size 1.3em
  letter-spacing 6.3px
  position absolute
  left 100px
  white-space nowrap
  transform rotate(-90deg)
  transform-origin left center
  z-index 5
  margin-top 70px
  display inline-block
  float left
  &.inversed
    float right
    left initial
    right 100px
    transform rotate(90deg)
    transform-origin right center
