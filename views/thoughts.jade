extends _partials/layout
  
block vars
  - var menuColor = "white"
  - var logoColor = "white"
  - var alternateMenu = true

block content
  div.thoughts-page
    include _partials/header
    
    div.heading
      h1.white Thoughts
      h5.white FOR CLIENTS &middot; FOR PEERS &middot; FOR EVERYONE
    
    section(class="light")
      div.bg-slanted.bgWhite
      
      div.posts
        each p in thoughts
          div.post
            a(href="/thoughts/#{p.url}", class="block-link")
            h5= p.author
            h1= p.title

            div.icon-arrow
