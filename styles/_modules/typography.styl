p
  font-size 20px
  font-weight 400
  line-height 34px
  margin 30px auto
  text-align left
  max-width 700px
  width 100%
  b
    margin-right 5px
h4 + p
  margin-top 50px

.center
  text-align center

.numbered-header
  display block
  margin 30px auto
  font-family 'europa'
  font-size 16px
  position relative
  transform rotate(45deg)
  width 30px
  height 30px
  line-height 30px
  box-sizing content-box
  text-align center
  span
    display block
    transform rotate(-45deg)
  &.light
    border 2px solid rgba(255, 255, 255, .2)
    color white
  &.dark
    border 2px solid rgba(0, 0, 0, .1)
    color black

.markdown-body
  max-width 700px
  margin auto
  text-align left
  position relative
  padding-top 40px
  h2, h3, h4, h5, h6
    text-align left
    color black !important
  img
    max-width 100%
