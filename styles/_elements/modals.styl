.modal
  display none
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background linear-gradient(45deg, blue, purple)
  z-index 10
  opacity 0.99
  overflow auto
  text-align center

  .close
    position absolute
    top 30px
    right 30px
    cursor pointer
    font-size 39px
    color white
    &:hover
      opacity 0.7
    +below(500px)
      right 50%
      margin-right -30px

#contact-modal
  form
    max-width 480px
    width 100%
    text-align left
    margin 100px auto 45px auto
    .inpt
      width 100%
    button[type="submit"]
      width 100%

  .email-address
    color white
    font-weight 500
    letter-spacing 1px
    margin-bottom 50px
    display block

#employee-modal
  .container
    background white
    max-width 630px
    width 100%
    margin 125px auto
    position relative
    padding 0
    &:after
      content ""
      display table
      clear both
    +below(500px)
      margin 100px 0 0
  .avatar
    width 315px
    height 315px
    float left
    +below(500px)
      width 100%
      height auto
  .info
    background black
    color white
    width 315px
    height 315px
    float right
    text-align left
    padding 20px 30px
    display flex
    flex-direction column
    justify-content space-between
    .title
      h2
        font-size 26px
        font-weight 700
        text-align left
      h4
        font-size 14px
        font-weight 500
        text-align left
        margin-top 5px
    .social
      li
        display inline-block
        padding 0 10px
        &:first-child
          padding-left 0
        &:last-child
          padding-right 0
      a
        font-size 24px
        color white
        &:hover
          opacity 0.6
    +below(500px)
      width 100%
      height auto
      text-align center
      .title
        margin-bottom 40px
        h2, h4
          text-align center
  .bio
    padding 20px 60px
    clear both
